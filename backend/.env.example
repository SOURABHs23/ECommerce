# ============================================
# ECommerce Backend Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (Gmail SMTP)
SPRING_MAIL_USERNAME=your_email@gmail.com
SPRING_MAIL_PASSWORD=your_gmail_app_password_here

# JWT Configuration (use a strong secret in production)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_64_chars

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/ecommerce
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here
