{
    "info": {
        "_postman_id": "ecommerce-api-collection",
        "name": "ECommerce API",
        "description": "Complete API collection for ECommerce Spring Boot Application",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Sign Up",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"firstname\": \"John\",\n    \"lastname\": \"Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"password123\",\n    \"mobile\": 9876543210\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/signup",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "signup"
                            ]
                        },
                        "description": "Register a new user account"
                    },
                    "response": []
                },
                {
                    "name": "Sign In",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"jwt_token\", jsonData.token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"john.doe@example.com\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/signin",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "signin"
                            ]
                        },
                        "description": "Sign in with existing credentials. The JWT token will be automatically saved to environment variable."
                    },
                    "response": []
                }
            ],
            "description": "Endpoints for user authentication (signup and signin)"
        },
        {
            "name": "Home",
            "item": [
                {
                    "name": "Get Home",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/home",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "home"
                            ]
                        },
                        "description": "Get welcome message for authenticated user"
                    },
                    "response": []
                }
            ],
            "description": "Home endpoint for authenticated users"
        },
        {
            "name": "OTP",
            "item": [
                {
                    "name": "Send Email",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"emails\": [\"recipient1@example.com\", \"recipient2@example.com\"],\n    \"subject\": \"Test Email Subject\",\n    \"message\": \"This is a test email message.\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/otp/send-email",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "otp",
                                "send-email"
                            ]
                        },
                        "description": "Send email to one or more recipients"
                    },
                    "response": []
                },
                {
                    "name": "Send SMS",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"mobiles\": [9876543210, 9876543211]\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/otp/send-sms",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "otp",
                                "send-sms"
                            ]
                        },
                        "description": "Send OTP SMS to one or more mobile numbers. Requires authentication."
                    },
                    "response": []
                },
                {
                    "name": "Verify OTP",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/otp/verify/:otp",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "otp",
                                "verify",
                                ":otp"
                            ],
                            "variable": [
                                {
                                    "key": "otp",
                                    "value": "123456",
                                    "description": "The OTP code to verify"
                                }
                            ]
                        },
                        "description": "Verify the OTP code. Requires authentication."
                    },
                    "response": []
                }
            ],
            "description": "Endpoints for email and SMS OTP operations"
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        }
    ]
}